<div class="container">
    <div class="alert alert-secondary text-center">
        <h1>ALL NEWS IN COMPUTER SCIENCE DEPARTMENT OF COOU</h1>    
    </div>
        
    <table class="table table-bordered">
        <thead class="bg-dark text-center">
        <tr class="text-white">
            <th>id</th>          
            <th>Title</th>
            <th>Description</th>
            <th>file</th>
            <th>Status</th>
            <th>Comments Allowed</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody class="text-center">
        {{#each posts}}
            <tr>               
                <td>{{_id}}</td>
                <td>{{title}}</td>
                <td>{{description}}</td>
                 <td>{{file}}</td>
                <td>{{status}}</td>
                <td>{{allowComments}}</td>
                <td class="d-flex">
                   <a href="/admin/post/edit/{{_id}}" class="btn btn-sm btn-warning mr-2">Edit Post</a>

                   <form action="/admin/post/delete/{{id}}?newMethod=DELETE" method="post">
                        <button class="btn btn-sm btn-danger" type="submit">Delete Post</button>
                    </form>
                    
                </td>
            </tr>    
        {{/each}}
        
        </tbody>
    </table>
    
    
</div>