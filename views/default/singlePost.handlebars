
    <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

            <!-- Title -->
            <h1 class="mt-4">{{post.title}}</h1>

            <!-- Author -->
            <p class="lead">
                by
                <a href="#">Admin</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p>Posted on {{post.creationDate}}</p>

            <hr>

            <!-- Preview Image -->
            <img class="img-fluid rounded" src="{{post.file}}" alt="">

            <hr>

            <!-- Post Content -->
            <p class="lead">{{post.description}}</p>


            <hr>
 </div>

    </div>
